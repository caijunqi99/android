<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_5">

    <RelativeLayout
        android:id="@+id/store_card"
        android:layout_width="@dimen/dp_338"
        android:layout_height="@dimen/dp_135"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/editor_bg">

        <TextView
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_7"
            android:textColor="@color/c_242424"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/platform"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_toRightOf="@id/store_name"
            android:background="@mipmap/ziying" />

        <TextView
            android:id="@+id/deal_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/store_name"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_5"
            android:text="成交订单量:1"
            android:textColor="@color/c_bebebe"
            android:textSize="@dimen/dp_12" />

        <Button
            android:id="@+id/go_store"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            android:background="@mipmap/jindian" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/show_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/deal_num"
            android:layout_marginHorizontal="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_10" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_25"
        android:background="@mipmap/header_frame">

        <ImageView
            android:id="@+id/store_logo"
            android:layout_width="@dimen/dp_49"
            android:layout_height="@dimen/dp_49"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    android:layout_marginHorizontal="@dimen/dp_50"
    android:background="@drawable/editor_bg"
    android:padding="@dimen/dp_5">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入支付密码"
        android:textSize="@dimen/dp_12" />

    <EditText
        android:id="@+id/et_paypsw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_below="@id/tv"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/pay_psw_bg"
        android:hint="请输入支付密码"
        android:inputType="textPassword"
        android:textColor="@color/c_242424"
        android:textSize="@dimen/dp_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/et_paypsw"
        android:background="@color/c_999999" />

    <Button
        android:id="@+id/bt_confirm_psw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:background="@drawable/login_bg"
        android:text="确定"
        android:textColor="@color/white" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_242"
    android:layout_marginHorizontal="@dimen/dp_66"
    android:background="@mipmap/register_success">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_39">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@mipmap/wancheng" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_14"
            android:text="您已注册成功"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/dp_12" />


        <TextView
            android:id="@+id/tv_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_7"
            android:text="欢迎加入汪疯的大家庭"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/dp_7" />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_login"
        android:layout_width="@dimen/dp_161"
        android:layout_height="@dimen/dp_31"
        android:layout_below="@id/rl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_31"
        android:background="@drawable/login_bg"
        android:text="立即登录"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_12" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_170"
    android:layout_height="@dimen/dp_258"
    android:id="@+id/rl_goods"
    android:layout_marginRight="@dimen/dp_4"
    android:layout_marginBottom="@dimen/dp_4"
    android:background="@drawable/editor_bg">

    <ImageView
        android:id="@+id/goods_iv"
        android:layout_width="@dimen/dp_157"
        android:layout_height="@dimen/dp_167"
        android:layout_marginHorizontal="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_7" />

    <TextView
        android:id="@+id/goods_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_iv"
        android:layout_marginHorizontal="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_13"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_info"
        android:layout_marginHorizontal="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_13"
        android:textColor="@color/red"
        android:textSize="@dimen/dp_15" />

</RelativeLayout>

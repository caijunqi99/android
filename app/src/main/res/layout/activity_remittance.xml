<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.mine.wallet.RemittanceActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize">

        <include layout="@layout/layout_top_action_back" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:background="@color/white"
        android:paddingHorizontal="@dimen/dp_15">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="收款账户"
            android:textColor="@color/c_242424"
            android:textSize="@dimen/dp_18" />
        <!--账户信息-->
        <RelativeLayout
            android:id="@+id/rl_info"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_200"
            android:layout_below="@id/tv"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/top_up_bg">

            <!--开户行-->
            <RelativeLayout
                android:id="@+id/kaihuming"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_39"
                android:layout_below="@id/tv_info"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="开户名"
                    android:textColor="@color/c_242424"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:id="@+id/tv_kaihuming"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_38"
                    android:layout_marginLeft="@dimen/dp_65"
                    android:gravity="center_vertical"
                    android:textColor="@color/c_242424"
                    android:textSize="@dimen/dp_12"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@+id/tv_kaihuming"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:background="@color/c_cbcbcb" />

            </RelativeLayout>
            <!--银行-->
            <RelativeLayout
                android:id="@+id/bank"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_39"
                android:layout_below="@id/kaihuming"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="银行"
                    android:textColor="@color/c_242424"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:id="@+id/tv_bank"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_38"
                    android:layout_marginLeft="@dimen/dp_65"
                    android:gravity="center_vertical"
                    android:textColor="@color/c_242424"
                    android:textSize="@dimen/dp_12"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@+id/tv_bank"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:background="@color/c_cbcbcb" />

            </RelativeLayout>
            <!--卡号-->
            <RelativeLayout
                android:id="@+id/card_num"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_39"
                android:layout_below="@id/bank"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="卡号"
                    android:textColor="@color/c_242424"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:id="@+id/tv_card_num"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_38"
                    android:layout_marginLeft="@dimen/dp_65"
                    android:gravity="center_vertical"
                    android:textColor="@color/c_242424"
                    android:textSize="@dimen/dp_12"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@+id/tv_card_num"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:background="@color/c_cbcbcb" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_39"
                android:layout_below="@id/card_num"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="转账备注"
                    android:textColor="@color/c_242424"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:id="@+id/remark"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_38"
                    android:gravity="center"
                    android:textColor="@color/c_242424"
                    android:textSize="@dimen/dp_12"
                    android:textStyle="bold" />

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_info"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_50"
            android:text="*请在转账时，填写转账备注信息。如不填写，所导致的一切后果与本公司无关。"
            android:textColor="@color/red"
            android:textSize="@dimen/dp_10" />

    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/identity_info_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200">


        <RelativeLayout
            android:id="@+id/iv"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_18"
            android:background="@mipmap/touxiang">

            <ImageView
                android:id="@+id/iv_goods"
                android:layout_width="@dimen/dp_78"
                android:layout_height="@dimen/dp_78"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_close"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:clickable="true">

            <Button
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_centerInParent="true"
                android:background="@mipmap/close"
                android:clickable="false" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_toRightOf="@id/iv"
            android:textColor="@color/c_ff498d"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_price"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_toRightOf="@id/iv"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/dp_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:text="数量"
            android:textColor="@color/c_242424"
            android:textSize="@dimen/dp_12" />

        <RelativeLayout
            android:id="@+id/rl_subtract"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/iv"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@id/num"
            android:clickable="true">

            <Button
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_centerInParent="true"
                android:background="@mipmap/jian"
                android:clickable="false" />

        </RelativeLayout>

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@id/rl_add"
            android:textColor="@color/c_242424"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rl_add"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/iv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:clickable="true">

            <Button
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_centerInParent="true"
                android:background="@mipmap/jia"
                android:clickable="false" />

        </RelativeLayout>

        <Button
            android:id="@+id/bt_buy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/dp_13"
            android:layout_marginBottom="@dimen/dp_13"
            android:background="@drawable/login_bg"
            android:clickable="true"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_12" />
    </RelativeLayout>
</RelativeLayout>
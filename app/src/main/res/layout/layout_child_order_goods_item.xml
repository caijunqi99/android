<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_goods"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/mImg_icon"
        android:layout_width="@dimen/dp_75"
        android:layout_height="@dimen/dp_75"
        android:src="@color/c_242424" />

    <TextView
        android:id="@+id/mTv_commodityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toEndOf="@+id/mImg_icon"
        android:textColor="@color/c_242424"
        android:textSize="@dimen/dp_12"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pay_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/mImg_icon"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@+id/mImg_icon"
        android:textColor="@color/c_ff8f00"
        android:textSize="@dimen/dp_12"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/mImg_icon"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="@color/c_242424"
        android:textSize="@dimen/dp_12"
        android:textStyle="bold" />

</RelativeLayout>